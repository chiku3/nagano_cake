<div class="container">
    <p>新規会員登録</p>

  <div class="row">
    <div class="form-group">
    <%= form_with model:@customer,url:customer_registration_path, local:true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field form-inline pb-1">
        <%= f.label :last_name,"名前",class:"form-label col-lg-3" %>
        <%= f.label :last_name,"（姓）",class:"form-label col-lg-1" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "名前",class:"form-label col-lg-3" %>
        <%= f.label :first_name,"（名）",class:"form-label col-lg-1" %>
        <%= f.text_field :first_name,class:"form-label col-lg-3" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :last_name,"フリガナ",class:"form-label col-lg-2" %>
        <%= f.label :last_name,"（セイ）",class:"form-label col-lg-2" %>
        <%= f.text_field :last_name_kana,class:"form-label col-lg-3" %>
        <%= f.label :first_name,"（メイ）",class:"form-label col-lg-1" %>
        <%= f.text_field :first_name_kana,class:"form-label col-lg-3" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :email,"メールアドレス",class:"form-label col-lg-4" %>
        <%= f.email_field :email,class:"form-label col-lg-4" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :postal_code,"郵便番号（ハイフンなし）",class:"form-label col-lg-4" %>
        <%= f.text_field :postal_code,class:"form-label col-lg-4" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :address,"住所",class:"form-label col-lg-4" %>
        <%= f.text_field :address,class:"form-label col-lg-8" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :telephone_number,"電話番号（ハイフンなし）",class:"form-label col-lg-4" %>
        <%= f.telephone_field :telephone_number,class:"form-label col-lg-4" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :password,"パスワード(６文字以上)",class:"form-label col-lg-4" %>
        <%= f.password_field :password, autocomplete: "new-password",class:"form-label col-lg-4" %>
      </div>

      <div class="field form-inline pb-1">
        <%= f.label :password_confirmation,"パスワード（確認用）",class:"form-label col-lg-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-label col-lg-4" %>
      </div>
    
    
    <div class="row">
     <div class="offset-lg-4"></div>
      <div class="col-lg-8">
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success col-lg-4"  %>
      </div>
      </div>
    </div>
    <% end %>

    </div>
  </div>

  <div class="row d-flex flex-column">
    <p>既に登録済みの方</p>
    <div  class="row pl-5">
    <p><%= link_to"こちら",new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>

</div>