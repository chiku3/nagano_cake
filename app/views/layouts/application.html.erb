<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mb-5">
      <nav class="navbar navbar-expend-md navbar-light bg-light border-bottom border-dark">
      <div class="container">
      <h1 class="navbar-brand p-3"><%= link_to"logo",root_path %></h1>
      <% if customer_signed_in? %>
          <div class="center-block">
          <p>ようこそ、<%= current_customer.last_name %>さん！</p>
          </div>
      <% end %>

        <ul class="navbar-nav d-flex flex-row">
        <% if customer_signed_in? %>
          <li class="nav-item pr-2"><%= link_to"マイページ", customers_my_page_path, class:"btn btn-outline-secondary pr-1" %></li>
          <li class="nav-item pr-2"><%= link_to"商品一覧", items_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2"><%= link_to"カート", cart_items_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item"><%= link_to"ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" %></li>
        <% elsif admin_signed_in? %>
          <li class="nav-item pr-2"><%= link_to"商品一覧", admin_items_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2"><%= link_to"会員一覧", admin_customers_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2 pr-2"><%= link_to"注文履歴一覧", admin_homes_top_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2"><%= link_to"ジャンル一覧", admin_genres_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item"><%= link_to"ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-outline-secondary" %></li>
        <% else %>
          <li class="nav-item pr-2"><%= link_to"About", homes_about_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2"><%= link_to"商品一覧", items_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item pr-2"><%= link_to"新規登録", new_customer_registration_path, class:"btn btn-outline-secondary" %></li>
          <li class="nav-item"><%= link_to"ログイン", new_customer_session_path, class:"btn btn-outline-secondary" %></li>
        <% end %>
        </ul>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
