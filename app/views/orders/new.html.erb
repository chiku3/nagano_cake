<p>注文情報入力</p>

<%= form_with model: @order, url: orders_path, local: true do |f| %>
  <p>支払方法</p>
    <%= f.radio_button :payment_method,"クレジットカード" %>
      <%= f.label :payment_method,"クレジットカード", value: "クレジットカード" %><br/>
    <%= f.radio_button :payment_method,"銀行振込" %>
      <%= f.label :payment_method,"銀行振込", value: "銀行振込" %>

  <p>お届け先</p>
    <%= f.radio_button :address,"ご自身の住所" %>
      <%= f.label :address,"ご自身の住所",value: "ご自身の住所" %><br/>
        〒<%= current_customer.postal_code %>
        <%= current_customer.address %><br/>
        <%= current_customer.last_name %><%= current_customer.first_name %><br/>
    
    <%= f.radio_button :address,"登録済住所から選択" %>
      <%= f.label :address,"登録済住所から選択",value: "登録済住所から選択" %>
        <%= f.collection_select(:address, @addresses, :id, :address) %><br/>
        
    <%= f.radio_button :address,"新しいお届け先" %>
      <%= f.label :address,"新しいお届け先",value: "新しいお届け先" %>
    
      <div class="field">
      <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
      </div>
      
      <div class="field">
      <%= f.label :address,"住所" %>
      <%= f.text_field :address %>
      </div>
      
      <div class="field">
      <%= f.label :name,"宛名" %>
      <%= f.text_field :name %>
      </div>

  <%= link_to"確認画面へ進む",orders_confirm_path, method: :post %>
  
<% end %>

