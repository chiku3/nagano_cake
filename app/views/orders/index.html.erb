<div class="container">

  <div class="row">
    <p class="font-weight-bold">注文履歴一覧</p>
  </div>

  <div class="row">
    <table class="table table-bordered table-sm">
      <thead>
        <tr class="table-secondary">
          <th scope="col" style="width: 15%">注文日</th>
          <th scope="col" style="width: 37%">配送先</th>
          <th scope="col" style="width: 15%">注文商品</th>
          <th scope="col" style="width: 10%">支払金額</th>
          <th scope="col" style="width: 13%">ステータス</th>
          <th scope="col" style="width: 10%">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %>
              <%= order.address %></br>
              <%= order.customer.full_name %></td>
          <td><% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %></br>
              <% end %>
          </td>
          <td><%= (order.total_payment).to_s(:delimited) %>円</td>
          <td></td>
          <td><%= link_to"表示する", order_path(order), class:"btn btn-primary btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>