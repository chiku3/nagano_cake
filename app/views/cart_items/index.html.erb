<p>ショッピングカート</p>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
    <% total = 0 %>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= attachment_image_tag cart_item.item, :image, :fill, 40, 30, format: "jpg" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td>
          <%= form_with model: cart_item,url: cart_item_path(cart_item),local: true, method: :patch do |f| %>
          <%= f.select :amount, [*1..100] %>
          <%= f.submit "変更" %>
          <% end %>
      </td>
      <td>
          <% subtotal = cart_item.item.add_tax_price.to_i*cart_item.amount.to_i %>
          <%= subtotal.to_s(:delimited) %>
      </td>
      <td>
        <%= form_with model: cart_item,url: cart_item_path(cart_item),local: true, method: :delete do |f| %>
        <%= f.submit "削除する" %>
        <% end %>
      </td>
    </tr>
        <% total += subtotal %>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= total.to_s(:delimited) %></td>
  </tr>
</table>

<%= link_to"買い物を続ける", root_path %>

