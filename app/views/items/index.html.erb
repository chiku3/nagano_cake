<div class="container">
  <div class="row">

    <div class="col-md-3">
      <table class="table table-sm table-borderless">
        <thead class="border border-dark">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody class="border border-dark">
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <div class="col-md-9">
    <h2>商品一覧</h2>
    <p>全<%= @items.count %>件</p>

    <div class="d-flex flex-row">
    <% @items.each do |item| %>
      <div class="d-flex flex-column pr-3">
      <%= link_to attachment_image_tag(item, :image, :fill, 100, 100, format:"jpg"),item_path(item) %>
      <%= item.name %></br>
      ¥<%= item.add_tax_price.to_s(:delimited) %>
      </div>
    <% end %>
    </div>

  </div>

  </div>
</div>