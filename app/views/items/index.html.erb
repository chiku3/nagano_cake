<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>商品一覧</h2>
<p>全<%= @items.count %>件</p>

<% @items.each do |item| %>
  <%= attachment_image_tag item, :image, :fill, 100, 100, format: "jpg" %>
  <%= item.name %>
  <%= item.price %>
<% end %>