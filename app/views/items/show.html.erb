<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>商品詳細</p>

  <%= attachment_image_tag @item, :image, :fill, 100, 100, format: "jpg" %>
  <%= @item.name %>
  <%= @item.introduction %>
  <p>¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</p>

  <%= form_with model: @cart_item, url: cart_items_path, local: true, method: :post do |f| %>
    <%= f.select :amount, [*1..100],{include_blank:"個数選択"},{required: true} %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.hidden_field :customer_id, :value => @customer.id %>
    <%= f.submit "カートに入れる" %>
  <% end %>
