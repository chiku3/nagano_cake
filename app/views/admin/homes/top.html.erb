<div class="container">
  
  <div class="row">
    <p class="font-weight-bold">注文履歴一覧</p>
  </div>
    
  <div class="row col-md-10 mx-auto">
      <table class="table table-sm">
        <thead>
          <tr class="table-secondary">
            <th scope="col" style="width: 30%">購入日時</th>
            <th scope="col" style="width: 30%">購入者</th>
            <th scope="col" style="width: 20%">注文個数</th>
            <th scope="col" style="width: 20%">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order) %></td>
              <td><%= order.customer.full_name %></td>
              <td><% total = 0 %>
                  <% order.order_details.each do |order_detail| %>
                  <% total += order_detail.amount %>
                  <% end %>
                  <%= total %>
              </td>
              <td>未</td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
      
</div>