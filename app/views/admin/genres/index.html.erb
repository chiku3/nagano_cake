<div class="container">
  <div class="row">
      <p class="font-weight-bold">ジャンル一覧・追加</p>
  </div>
  
  <div class="row mt-4">    
        <%= form_with model:@genre,url:admin_genres_path,local:true do |f| %>
        <div class="field form-inline">
          <%= f.label :name,"ジャンル名",class:"mr-5" %>
          <%= f.text_field :name,class:"mr-5" %>
          <%= f.submit"新規登録", class:"btn btn-success btn-sm" %>
        </div>
        <% end %>
  </div>
  
  <div class="row mt-5">
        <table class="table table-sm col-md-4">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success btn-sm" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
  </div>