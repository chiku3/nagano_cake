<p>ジャンル一覧・追加</p>

  <%= form_with model:@genre,url:admin_genres_path,local:true do |f| %>

  <div class="field">
    <%= f.label :name,"ジャンル名" %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit"新規登録" %>

  <% end %>

  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>