<p>商品編集</p>

  <%= form_with model:@item,url:admin_item_path,local: true do |f| %>

  <div class="field">
    <%= f.label :image,"商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="field">
    <%= f.label :name,"商品名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :introduction,"商品説明" %>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :genre,"ジャンル" %>
    <%= f.collection_select(:genre_id, @genre, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :price,"税抜価格" %>
    <%= f.text_field :price %>円
  </div>

  <%= f.submit "変更を保存" %>

  <% end %>
