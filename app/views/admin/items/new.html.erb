<div class="container d-flex flex-column">
  <div class="mx-auto">
  
  <div class="row">
    <p class="font-weight-bold">商品新規登録</p>
  </div>
  
  <%= form_with model:@item,url:admin_items_path,local: true do |f| %>
    
  <div class="row d-flex flex-column"> 
        <div class="field form-inline">
          <%= f.label :image,"商品画像",class:"form-label col-md-3" %>
          <%= f.attachment_field :image, class:"col-md-8" %>
        </div>
      
        <div class="field form-inline">
          <%= f.label :name,"商品名",class:"form-label col-md-3" %>
          <%= f.text_field :name, class:"form-control col-md-8" %>
        </div>
      
        <div class="field form-inline">
          <%= f.label :introduction,"商品説明",class:"form-label col-md-3" %>
          <%= f.text_area :introduction, class:"form-control col-md-8" %>
        </div>
      
        <div class="field form-inline">
          <%= f.label :genre,"ジャンル",class:"form-label col-md-3" %>
          <%= f.collection_select(:genre_id, @genre, :id, :name,{prompt: "--選択してください--"}) %>
        </div>
      
        <div class="field form-inline">
          <%= f.label :price,"税抜価格",class:"form-label col-md-3" %>
          <%= f.text_field :price, class:"form-control col-md-8" %>円
        </div>
      
        <%= f.submit "新規登録", class:"btn btn-success btn-sm mx-auto"%>
  </div>
      
  <% end %>
  
  </div>
 </div>