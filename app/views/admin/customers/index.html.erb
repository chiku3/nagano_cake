<div class="container">
  <div class="row">
    <p class="font-weight-bold">会員一覧</p>
  </div>
      
  <div class="row col-md-10 mx-auto">
        <table class="table table-sm">
          <thead>
            <tr class="table-secondary">
              <th scope="col" style="width: 20%">会員ID</th>
              <th scope="col" style="width: 30%">氏名</th>
              <th scope="col" style="width: 30%">メールアドレス</th>
              <th scope="col" style="width: 20%">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
  </div>      

</div>