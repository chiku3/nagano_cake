<p><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</p>

<%= form_with model:@customer,url:admin_customer_path, local:true do |f| %>
  
  <div class="field">
    <%= f.label :customer_id,"会員ID" %>
    <%=  @customer.id %>
  </div>
  
  <div class="field">
    <%= f.label :last_name,"氏名" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana,"フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code,"郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :address,"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number,"電話番号" %>
    <%= f.telephone_field :telephone_number, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email,"メールアドレス" %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  
  <%= f.submit "変更を保存" %>
  
<% end %>
